<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:paddingVertical="15dp">
    <include layout="@layout/checkbox" />

    <LinearLayout
        android:id="@+id/layoutUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="end"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/message_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="45dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_chat_item_right"
                android:orientation="vertical"
                android:padding="15dp"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/SubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="2dp"
                    android:text="@string/name"
                    android:visibility="gone"
                    android:textColor="@color/app_only_white"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:textColor="@color/app_only_white"
                    android:textColorLink="@color/app_only_white"
                    android:textSize="14sp"
                    tools:text="message" />

                <TextView
                    android:layout_below="@id/tv_message"
                    android:id="@+id/tv_time"
                    style="@style/SubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:text="@string/time"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/app_only_white"
                    android:textSize="10sp"
                    tools:ignore="ObsoleteLayoutParam,SmallSp" />

            </LinearLayout>

        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:src="@color/app_yellow"
            android:visibility="invisible" />


        <ImageView
            android:id="@+id/lib_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/right_one_side_rounded"
            android:contentDescription="@string/app_name"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>
