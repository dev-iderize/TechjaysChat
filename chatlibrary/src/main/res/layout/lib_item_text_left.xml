<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutUser"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:paddingVertical="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:src="@color/app_yellow"
            android:visibility="invisible" />

        <include layout="@layout/checkbox" />

        <LinearLayout
            android:id="@+id/message_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_chat_item_left"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_name"
                style="@style/SubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="2dp"
                android:text="@string/name"
                android:visibility="gone"
                android:textColor="@color/app_only_white"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:autoLink="web"
                android:linksClickable="true"
                android:textColor="@color/app_only_white"
                android:textColorLink="@color/app_only_white"
                android:textSize="14sp"
                tools:text="message" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/SubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:text="@string/time"
                android:textColor="@color/app_only_white"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

        </LinearLayout>

    </LinearLayout>



    <ImageView
        android:id="@+id/lib_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/right_one_side_rounded"
        android:contentDescription="@string/app_name"
        android:visibility="gone" />

</LinearLayout>