<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="7.5dp"
        android:layout_weight="1"
        android:elevation="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/layout_search_text"
            style="@style/SearchText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="7.5dp"
            android:drawableTint="@color/app_black"
            android:hint="@string/Search_friends"
            android:imeOptions="actionSearch"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:singleLine="true"
            android:textColorHint="@color/app_black"
            app:drawableStartCompat="@drawable/ic_search"
            tools:ignore="NestedWeights,UnusedAttribute" />

        <ImageView
            android:id="@+id/layout_search_clear"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="12dp"
            android:padding="5dp"
            android:src="@drawable/ic_close"
            android:visibility="gone"
            app:tint="@color/app_black" />

    </LinearLayout>

    <TextView
        android:id="@+id/layout_search_cancel"
        style="@style/SubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:visibility="gone" />

</LinearLayout>

