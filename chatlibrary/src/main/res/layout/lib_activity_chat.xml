<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg"
    tools:context=".chat.LibChatActivity">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/libImgBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_name"
            android:src="@drawable/lib_ic_baseline_keyboard_arrow_left_24"
            app:tint="@color/app_only_white" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/libImgProfile"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:src="@color/app_only_white"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/header_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/libTvUserName"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/app_only_white"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/lib_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vs"
                android:textColor="@color/app_only_white"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lib_username_vs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/vs"
                    android:textColor="@color/app_only_white"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/lib_total_bid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:gravity="end"
                    android:text="@string/total_bid"
                    android:textColor="@color/app_only_white"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    tools:ignore="RelativeOverlap" />

            </RelativeLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/delete_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:contentDescription="@string/app_name"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:src="@drawable/lib_ic_baseline_delete_24"
            android:visibility="gone"
            app:tint="@color/app_only_white" />

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/r1"
        android:layout_below="@id/l1"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp" />


    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_rounded__type_message"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp"
            tools:ignore="UselessParent">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:background="@color/app_only_white"
                android:gravity="top|start"
                android:hint="@string/type_message"
                android:inputType="textMultiLine"
                android:padding="6dp"
                android:scrollbars="vertical"
                android:textColor="@color/chat_black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/btnSendFile"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_file"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                android:rotation="360"
                android:src="@drawable/ic_file" />

            <ImageView
                android:id="@+id/btnSendImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/app_name"
                android:padding="3dp"
                android:rotation="360"
                android:src="@drawable/ic_camera_" />

            <ImageView
                android:id="@+id/btn_send_video"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_video_"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                android:rotation="360" />

            <ImageView
                android:id="@+id/btnSendMessage"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:contentDescription="@string/app_name"
                android:padding="6dp"
                android:rotation="360"
                android:src="@drawable/lib_sendwhite"
                app:tint="@color/app_grey" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>