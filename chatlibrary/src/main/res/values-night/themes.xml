<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Forcefield" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color_dark</item>
        <item name="colorPrimaryVariant">@color/primary_color_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_color_dark</item>
        <item name="colorSecondaryVariant">@color/primary_color_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:autofilledHighlight" tools:targetApi="o">@android:color/transparent</item>
        <item name="colorAccent">@color/primary_color_light</item>
    </style>
</resources>